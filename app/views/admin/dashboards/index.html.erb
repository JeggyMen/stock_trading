<h1>Admin Dashboard</h1>
<p>Welcome to the admin dashboard, <%= current_user.email %>!</p>

<h2>Traders List</h2>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Created At</th>
      <th>Edit</th>
      <th>View</th>
    </tr>
  </thead>
  <tbody>
    <% if @traders.present? %>
      <% @traders.each do |trader| %>
        <tr>
          <td><%= trader.email %></td>
          <td><%= trader.created_at.strftime('%B %d, %Y') %></td>
          <td><%= link_to 'Edit', edit_admin_user_path(trader) %></td>
          <td><%= link_to 'View', admin_user_path(trader) %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="2">No traders found.</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create Trader', new_admin_user_path %>
