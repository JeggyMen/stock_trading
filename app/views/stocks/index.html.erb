<h1>Stocks List</h1>

<% if flash[:notice] %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Symbol</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.symbol %></td>
        <td><%= number_to_currency(stock.price, unit: "â‚±") %></td>
        <td>
          <%= button_to 'Add to Portfolio', add_to_portfolio_stock_path(stock), method: :post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to 'Back to Dashboard', client_dashboard_path, method: :get %>
