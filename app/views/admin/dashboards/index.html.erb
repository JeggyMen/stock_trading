<h1>Admin Dashboard</h1>
<p>Welcome to the admin dashboard, <%= current_user.email %>!</p>

<%= button_to 'View Pending Traders', pending_admin_users_path, method: :get, class: 'btn btn-primary' %>
<br>
<%= button_to 'All Transactions of traders', admin_transactions_path, method: :get, class: 'btn btn-primary' %>

<h2>Traders List</h2>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Created At</th>
      <th>Edit</th>
      <th>View</th>
    </tr>
  </thead>
  <tbody>
    <% if @traders.present? %>
      <% @traders.each do |trader| %>
        <tr>
          <td><%= trader.email %></td>
          <td><%= trader.created_at.strftime('%B %d, %Y') %></td>
          <td><%= button_to 'Edit', edit_admin_user_path(trader), method: :get %></td>
          <td><%= button_to 'View', admin_user_path(trader), method: :get %></td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="4">No traders found.</td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to 'Create Trader', new_admin_user_path, method: :get %>
